<section class="shoptwopicture" data-fls-shoptwopicture>
  <div class="shoptwopicture__content {% if section.settings.layout == 'reverse' %}shoptwopicture__content--column-reverse{% endif %}">
    <div class="shoptwopicture__image-block">
      {% assign img_alt = section.settings.image_alt | default: section.settings.heading %}
      {% if section.settings.image_link != blank %}
        <a href="{{ section.settings.image_link }}" class="shoptwopicture__link">
      {% endif %}
          <picture>
            {% if section.settings.image_mobile != blank %}
              <source srcset="{{ section.settings.image_mobile | img_url: '800x' }}" media="(max-width: 767px)">
            {% endif %}
            {% if section.settings.image_desktop != blank %}
              <img class="shoptwopicture__image ibg" src="{{ section.settings.image_desktop | img_url: '1200x' }}" alt="{{ img_alt | escape }}">
            {% endif %}
          </picture>
      {% if section.settings.image_link != blank %}
        </a>
      {% endif %}
    </div>

    <div class="shoptwopicture__text-block">
      {% if section.settings.heading != blank %}
        <div class="shoptwopicture__parahraph">
          <p class="shoptwopicture__text">{{ section.settings.heading }}</p>
        </div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--standart">
          {{ section.settings.button_label }}
          <span class="button__arrow"></span>
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Content + Image banner",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "normal", "label": "Image right (default)" },
        { "value": "reverse", "label": "Image left (column-reverse)" }
      ],
      "default": "reverse"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text"
    },
    {
      "type": "url",
      "id": "image_link",
      "label": "Image link (optional)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Text",
      "default": "Lightweight robes that bring warmth and comfort"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button text",
      "default": "Shop NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Content + Image banner",
      "category": "Banners"
    }
  ]
}
{% endschema %}
